<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('../assets/background.jpg');">
  <div class="banner-content">
    <h1>Feira da Maçã</h1>
    <p>Compra e Venda de produtos da Apple</p>
    <a class="btn btn-primary btn-lg">Ver produtos</a>
  </div>
</div>

<h3>Últimos destaques</h3>

<div class="container">
  <div class="row">

    <% Product.last(9).each do |product| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card">
       <p><%= product.id %></p>
       <p><%= product.price %></p>
       <p><%= product.model_code %></p>
       <%= link_to "View", product_path(product), class: "btn btn-primary" %>
       <%= link_to "Buy", product_path(product), class: "btn btn-danger" %>
     </div>
   </div>
   <% end %>
 </div>
</div>
