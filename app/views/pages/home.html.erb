<h1>All products</h1>

<div class="container">
  <div class="row">

    <% Product.all.each do |product| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card">
       <p><%= product.id %></p>
       <p><%= product.price %></p>
       <p><%= product.model_code %></p>
       <%= link_to "View", product_path(product), class: "btn btn-primary" %>
     </div>
   </div>
   <% end %>
 </div>
</div>
