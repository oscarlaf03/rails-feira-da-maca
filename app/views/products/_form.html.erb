<h1><%= type %></h1>
<%= simple_form_for [@product] do |f| %>
<%= f.input :price %>
<%= f.input :model_code %>
<%= f.input :memory %>
<%= f.input :color, collection: %w(Black Gray White Dark_Gray Pink) %>
<%= f.input :photo %>
<%= f.input :description %>
<%= f.input :category, collection: %w(Phones Laptops Tablets iPods Acessories) %>
<%= f.input :status, collection: %w(Available Unavaiable) %>
<%= f.input :product_type %>
<%= f.input :version %>
<%= f.button :submit, {class: "btn btn-default"} %>
<%= link_to "Cancel", :back, {class: "btn btn-default"} %>


<% end %>
